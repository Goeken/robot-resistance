
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>You have <%= @result_count %> heroes requesting to join the cause.</h3>
    </div>
  </div>
  <div class="row">
    <% @heroes.each do |hero| %>
      <div class="col-md-6">
        <h3><%= hero["name"] %></h3>
        <button class="btn btn-primary">Add +</button>
      </div>
    <% end %>
  </div>
</div>