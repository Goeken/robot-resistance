<div class="container hero-result-wrapper">
  <div class="row">
    <div class="col-md-12">
      <h3 class="search-title">You have <span class="special-blue"><%= @hero_count %></span> heroes that are willing to join the fight against the AI uprising.</h3>
    </div>
  </div>
  <div class="row">
    <% @heroes.each do |hero| %>
      <div class="col-md-6">
      	<div class="indi-hero-wrap">
	      <%= image_pack_tag "media/images/hero-placeholder.jpg", class: "hero--img" %>
	       <h3 class="hero-name"><%= hero["name"] %></h3>
        <%= form_for(Hero.new, remote: true) do |f| %>
          <%= f.hidden_field :name,  value: hero["name"] %>
          <%= f.hidden_field :hero_id, value: hero["id"] %>
          <button type="submit" class="btn btn-primary add-hero-btn">Add +</button>
        <% end %>
	    </div>
      </div>
    <% end %>
  </div>
</div>